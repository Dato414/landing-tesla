---
const { color, title, subtitle } = Astro.props
const textColor = `text-${color}`
---
<section class="landing-section h-screen w-screen  bg-black text-center relative overflow-hidden z-30" 
data-header-color={ color } >
    <div class="z-30 relative h-full flex flex-col">
        <header class="">
            <h2 class={`${textColor} pt-40 text-[37px] font-medium`}>{title}</h2>
            <p class={`${textColor} text-sm`}>{subtitle}</p>
        </header>
        <footer class="z-30 relative flex flex-grow justify-end flex-col pb-20 ">
            <div>
                <slot name="footer"/>
                
            </div>
        </footer>
    </div>
    <div class="absolute top-0 bottom-0 z-10 h-full w-full">
        <slot name="background"/>
    </div>
</section>